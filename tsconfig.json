{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./components/*"],
      "@constants/*": ["./constants/*"],
      "@hooks/*": ["./hooks/*"],
      "@app-types/*": ["./types/*"],
      "@utils/*": ["./utils/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "lib": ["esnext", "dom"]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./app/**/*.tsx",
    "./app/**/*.ts",
    "./components/**/*.ts",
    "./components/**/*.tsx",
    "./constants/**/*.ts",
    "./hooks/**/*.ts",
    "./hooks/**/*.tsx",
    "./types/**/*.ts",
    "./utils/**/*.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/__mocks__/*"
  ]
}
